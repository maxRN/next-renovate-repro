{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "azure-pipelines": {
      "enabled": true
  },
  "extends": [":semanticCommitsDisabled"],
  "packageRules": [
      {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["digest", "pin", "patch", "minor"],
      "groupName": "frontend",
      "group": {
        "prTitleStrict": true,
        "commitMessagePrefix": "[RENOVATE]",
        "commitMessageTopic": "FE dependencies",
        "commitMessageExtra": "",
        "commitMessageSuffix": ""
      }
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["major"],
      "groupName": "frontend_major",
      "prTitleStrict": true,
      "group": {
        "commitMessagePrefix": "[RENOVATE]",
        "commitMessageTopic": "FE major dependencies",
        "commitMessageExtra": "",
        "commitMessageSuffix": ""
      }
    },
    {
      "matchManagers": ["azure-pipelines"],
      "groupName": "azure_pipelines",
      "commitMessage": "[RENOVATE] Update Azure DevOps Pipelines"
    }
  ]
}
